{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Develop frontend",
            "type": "process",
            "command": "npm",
            "args": ["run", "develop"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Develop backend",
            "type": "process",
            "command": "npm",
            "args": ["run", "develop"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Test",
            "type": "process",
            "command": "npm",
            "args": ["test"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Integration tests",
            "type": "process",
            "command": "npm",
            "args": ["run", "integration-test"],
